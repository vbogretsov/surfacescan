root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{tf,tfvars,yaml,yml,json}]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
